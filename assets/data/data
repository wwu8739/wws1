document.getElementById("searchButton").addEventListener("click", function () {

  const keyword = document.getElementById("searchInput").value.toLowerCase().trim();
  const resultsList = document.getElementById("searchResults");
  const message = document.getElementById("searchMessage");

  resultsList.innerHTML = "";
  message.textContent = "";

  if (!keyword) {
    message.textContent = "Please enter a search term.";
    return;
  }

  const results = jsObjectData.filter(item =>
    item.app.toLowerCase().includes(keyword) ||
    item.action.toLowerCase().includes(keyword) ||
    item.windows.toLowerCase().includes(keyword) ||
    item.mac.toLowerCase().includes(keyword)
  );

  if (results.length === 0) {
    message.textContent = "No results found.";
    return;
  }

  message.textContent = `Found ${results.length} result(s).`;

  results.forEach(item => {
    const li = document.createElement("li");
    li.innerHTML = `
      <strong>${item.app}</strong> - ${item.action}<br>
      Windows: ${item.windows} | Mac: ${item.mac}
    `;
    resultsList.appendChild(li);
  });

});
